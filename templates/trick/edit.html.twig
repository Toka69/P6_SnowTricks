{% extends 'base.html.twig' %}

{% block title %}Trick edit{% endblock %}

{% block body %}
    <div class="container mt-5 pt-3 border rounded">
        <div class="hero-trick-image mb-3" style="background-image: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url('{{ trick.getCover.location }}')">
            <div class="hero-text">
                <h1>{{ trick.name|capitalize }}</h1>
            </div>
            {% if is_granted("ROLE_USER") %}
                <div class="d-flex flex-row-reverse mr-4">
                    <div class="mt-3 p-3 rounded bg-light">
                        <a href="#" class="mr-3"><i class="fas fa-pencil-alt"></i></a>
                        <a href="#"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </div>
            {% endif %}
        </div>
            <div class="col-md-3">
                <div class="card mb-2">
                        <label for="file-input">
                            <img src="https://icon-library.com/images/upload-icon-image/upload-icon-image-12.jpg" class='img-fluid' style="width: 100px; height: 100px;"/>
                        </label>

                        <input id="file-input" type="file"/>

                        <div>
                            <a href="#"><i class="fas fa-trash-alt"></i></a>
                        </div>
                </div>
            </div>
            {{ form_start(formView) }}
        <div class="row">
            {% for photo in formView.photos %}
            <div class="col-md-3">
                <div class="card mb-2">
                    {{ form_label(photo.location, "<img src='#{photo.vars.value.location}' alt='trick' class='img-fluid' style='height: 150px'") }}
                    {{ form_widget(photo.location) }}
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="container col-md-8 mt-5 mb-5">
            <fieldset class="mb-4">
                {{ form_errors(formView) }}
                {{ form_row(formView.name) }}
                {{ form_row(formView.description) }}
                {{ form_row(formView.category) }}
            </fieldset>
            <fieldset>
                <button type="button" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                    Delete
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Save
                </button>
            </fieldset>
            {{ form_end(formView) }}
        </div>
        <div class="row justify-content-around border rounded pt-3 pb-3 ml-3 mr-3 mb-3">
            <a href="{{ path('trick_category', {'slug': trick.category.slug}) }}"><span class="badge badge-primary p-2">{{ trick.category.name }}</span></a>
            <p>Author: {{ trick.user.firstName }} {{ trick.user.lastName }}</p>
            <p>Created: {{ trick.createdDate|format_datetime(pattern="MMMM d, yyyy, hh:mm") }}</p>
            <p>Modified: {{ trick.modifiedDate|format_datetime(pattern="MMMM d, yyyy, hh:mm") }}</p>
        </div>
    </div>
{% endblock %}