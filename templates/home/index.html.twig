{% extends 'base.html.twig' %}

{% block title %}Snow Tricks{% endblock %}

{% block body %}
        <div class="hero-image">
                <div class="hero-text">
                        <h1 style="font-size:80px">Snow Tricks</h1>
                        <h3>La communaut√©</h3>
                </div>
                <a href="#tricks"><i class="fas fa-arrow-circle-down fa-3x arrow-down"></i></a>
        </div>
        <div class="container mt-5 mb-5">
                <ul id="myList" class="row" id="tricks">
                {%  for trickPhoto in tricksPhotos %}
                        <li class="col-md-3">
                                <div class="card mb-2">
                                        <img src="{{ trickPhoto.location }}" alt="trick" class="img-fluid" style="height: 150px">
                                        <div class="card-body d-flex justify-content-between">
                                                <a href="{{ path('trick_category', {'slug': trickPhoto.trick.category.slug}) }}/{{ trickPhoto.trick.slug }}" class="btn btn-primary btn-sm">{{ trickPhoto.trick.name }}</a>
                                                <div>
                                                        <a href="#" class="mr-3"><i class="fas fa-pencil-alt"></i></a>
                                                        <a href="#"><i class="fas fa-trash-alt"></i></a>
                                                </div>
                                        </div>
                                </div>
                        </li>
                {% endfor %}
                </ul>
                <div class="row arrow-up">
                        <a href="#tricks"><i class="fas fa-arrow-circle-up fa-3x"></i></a>
                </div>
                <div class="text-center mb-5">
                        <button class="btn btn-primary" id="loadMore">Load More</button>
                </div>
        </div>
{% endblock %}

{% block javascripts_custom %}
    <script type="text/javascript">
            $(document).ready(function(){
                    var size_li = $("#myList li").length;
                    x = 8;
                    $('#myList li:lt('+x+')').show();
                    $('#loadMore').click(function(){
                            x = (x+8 <= size_li) ? x+8 : size_li;
                            $('#myList li:lt('+x+')').show();
                            if(x === size_li){
                                    $('#loadMore').hide();
                            }
                    });
            });
    </script>
{% endblock %}
