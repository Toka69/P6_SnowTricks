{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center mt-5">
            <h2>Reset your password</h2>
        </div>
        <div class="row justify-content-center">
            <div class="bg-secondary p-3 rounded border" style="width: 340px">
                {{ form_start(form) }}
                <h5 class="text-justify">Enter your user account's verified email address and we will send you a password reset link.</h5>
                    {{ form_row(form.email) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}