{% extends 'base.html.twig' %}

{% block title %}New password{% endblock %}

{% block body %}
    <div class="container">
    <div class="text-center font-weight-normal mt-5">
        <h1 class="h3">Hi {{ form.vars.value.firstname ~ ' ' ~ form.vars.value.lastname }}, please enter your new password!</h1>
    </div>
    <div class="row justify-content-center">
        <div class="bg-secondary p-3 rounded border" style="width: 340px">
            {{ form_start(form) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}