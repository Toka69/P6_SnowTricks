{% extends 'base.html.twig' %}

{% block title %}Resend Activation Link{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center font-weight-normal mt-5">
            <h1 class="h3">Resend your activation link</h1>
        </div>
        <div class="row justify-content-center">
            <div class="bg-secondary p-3 rounded border" style="width: 340px">
                {{ form_start(form) }}
                <h5 class="text-justify">Enter your user account email address and we will send you a new activation link.</h5>
                {{ form_row(form.email) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}